<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.commandcenter.devchat.Controller.Activity_PrivateMessageBox"
    android:background="@drawable/layout_background"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/privateMessage_RecView"
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:padding="12dp">

    </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/privateMessage_iv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/star_big_off"
                android:contentDescription="img_Button"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/privateMessage_et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:hint="Message"
                android:textStyle="italic"
                android:textSize="14sp"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/privateMessage_btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnSend" />

        </LinearLayout>

</LinearLayout>
